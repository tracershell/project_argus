<style>
  .filter-bar {
    margin-bottom: 20px;
  }

  .selected-info {
    text-align: center;
    font-size: 1.2rem;
    font-weight: bold;
    margin: 20px 0;
    padding: 3px;
    background-color: #e6f2ff; /* ì—°í•œ í•˜ëŠ˜ìƒ‰ ë°°ê²½ */
    border-top: 2px solid #99ccff;
    border-bottom: 2px solid #99ccff;
  }

  .thumbnail-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 10px;
  }

  .thumbnail-grid img {
    width: 146px;
    height: 110px;
    object-fit: cover;
    border-radius: 6px;
    cursor: pointer;
    border: 1px solid #ccc;
  }

  .filter-bar {
    display: flex;
    gap: 8px;
    justify-content: center;
    align-items: center;
    margin-bottom: 20px;
    flex-wrap: wrap;
  }

  .filter-bar select {
    padding: 5px 8px;
    border: 1px solid #ccc;
    border-radius: 6px;
    background-color: #f9f9f9;
    font-size: 0.66rem;       /* ê¸€ì”¨ í¬ê¸° ì¶•ì†Œ */
    min-width: 100px;         /* ë°•ìŠ¤ ë„ˆë¹„ ì¶•ì†Œ */
    transition: all 0.3s ease;
  }

  .filter-bar select:focus {
    border-color: #66afe9;
    outline: none;
    box-shadow: 0 0 4px rgba(102, 175, 233, 0.5);
  }

  .filter-bar button {
    padding: 5px 10px;
    background-color: #007bff;
    color: white;
    font-size: 0.66rem;      /* ê¸€ì”¨ í¬ê¸° ì¶•ì†Œ */
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .filter-bar button:hover {
    background-color: #0056b3;
  }
</style>

<h2>ğŸ“· Photo Gallery</h2>

<div class="filter-bar">
  <form method="GET" action="/photo_gallery">
    <select name="year">
      <option value="">---  Year ---</option>
      <% years.forEach(y => { %>
        <option value="<%= y %>" <%= selectedYear === y ? 'selected' : '' %>><%= y %></option>
      <% }) %>
    </select>

    <select name="place">
      <option value="">-- Key word --</option>
      <% places.forEach(p => { %>
        <option value="<%= p %>" <%= selectedPlace === p ? 'selected' : '' %>><%= p %></option>
      <% }) %>
    </select>

    <button type="submit">ğŸ” ê²€ìƒ‰</button>
  </form>
</div>

<% if (selectedYear || selectedPlace) { %>
  <div class="selected-info">
    <% if (selectedYear && selectedPlace) { %>
      <%= selectedYear %> - <%= selectedPlace %>
    <% } else if (selectedYear) { %>
      <%= selectedYear %>
    <% } else if (selectedPlace) { %>
      <%= selectedPlace %>
    <% } %>
  </div>
<% } %>

<div class="thumbnail-grid">
  <% photos.forEach(photo => { %>
    <a href="/uploads/<%= photo.original %>" target="_blank" title="<%= photo.comment %>">
      <img src="/thumbnails/<%= photo.thumbnail %>" alt="thumbnail">
    </a>
  <% }) %>
</div>

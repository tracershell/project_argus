    <input type="text" name="address" placeholder="Address" style="flex: 1 1 20%;" />
    <input type="text" name="city" placeholder="City" style="flex: 1 1 10%;" />
    <input type="text" name="state" placeholder="State" style="flex: 1 1 6%;" />

  <div style="width: 100%; background: #eee; border-radius: 4px;">
    <div id="progress-bar" style="width: 0%; height: 20px; background: #3498db; border-radius: 4px;"></div>
  </div>
  <p id="progress-text" style="font-size: 0.9rem; margin-top: 4px;">0%</p>
</div>

<!-- Movie List Table -->
